<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Invoice Lines -->


        <record id="view_invoice_line_tree" model="ir.ui.view">
            <field name="name">account.invoice.line.tree</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_tree" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="sale_line_ids" />
                </field>
            </field>
        </record>

        <record id="view_invoice_line_form" model="ir.ui.view">
            <field name="name">account.invoice.line.form</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_form" />
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="sale_line_ids" />
                </field>
            </field>
        </record>

        <record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="ad" />
                </field>
                <xpath expr="//sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="sale_line_ids" />
                </xpath>
                <xpath expr="//sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='origin']" position="attributes">
                    <attribute name="invisible" >0</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page[1]" position="after">
                    <page name="free_text" string="Free Text" >
                        <field name="free_text" />
                    </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
