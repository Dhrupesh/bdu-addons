<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sale_product_online_form_view">
            <field name="name">sale.product.online.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
        
                <!-- custom attributes go here -->
                <xpath expr="//field[@name='order_line']/form/label[@for='name']" position="before">

                    <!-- attachments on orderline -->
                    <group attrs="{'invisible' : [('prod_cat','not in', 'Online')]}">
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline"/>
                            <field name="url_to_material" />
                    </group>

                    <group name="Custom product info" attrs="{'invisible' : [('prod_cat','not in', 'Online')]}">
                        
                        <group name="custom product info left column">
                            <label for="" string="How to serve"/> 
                            <newline/> 
                            <field name="landing_page" attrs="{'required' : [('prod_cat','in', 'Online')]}"/>
                            <field name="retarget"     attrs="{'required' : [('prod_cat','in', 'Online')]}"/>
                            <field name="profile"      widget="many2many_tags"    placeholder="Tags..."
                                                       attrs="{'required' : [('prod_cat','in', 'Online')]}"/>
                            <newline/>
                            <field name="from_date"    attrs="{'required' : [('prod_cat','in', 'Online')]}"/>
                            <field name="to_date"      attrs="{'required' : [('prod_cat','in', 'Online')]}"/>
                        </group>

                        <group name="custom product info right column">
                            <label for="adv_issue_ids" string="Where to serve"/> 
                            <newline/>
                            <field name="adv_issue_ids" nolabel="1" 
                                   domain="[('parent_id','=', 'Online')]" 
                                   options="{'no_open': True,'no_create': True, 'no_create_edit': True}" 
                                   context="{'search_view_ref':'bdu_product_online.online_view_filter',
                                             'tree_view_ref':'bdu_product_online.online_tree_view' }"/>
                        </group>

                        <field name="layout_remark" string="Production remark" 
                                                        attrs="{'required' : [('prod_cat','in', 'Online')]}"/>

                    </group>

                </xpath>  


            </field>                               
        </record>
    </data>
</openerp>       

